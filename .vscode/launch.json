    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Backend",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/apps/backend",
            "env": {
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger", // I have no idea why VSCode suggested this be here, I assume it turns off flask's own debugger?
                "--host=0.0.0.0",
                "-p",
                "5050" // TODO try to read env var for BACKEND_PORT? or up to the dev to manage this?
            ],
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Debug Frontend",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/apps/frontend",
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "type": "node"
        }
    ]
}