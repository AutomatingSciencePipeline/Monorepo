{
    "name": "GLADOS Dev Container",
    "image": "gladospipeline/glados-dev-container:main",
    "hostRequirements": {
        "cpus": 4,
        "memory": "16gb",
        "storage": "32gb"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.pylint",
                "ms-python.vscode-pylance",
                "herrmannplatz.npm-dependency-links",
                "dbaeumer.vscode-eslint",
                "christian-kohler.npm-intellisense",
                "wix.vscode-import-cost",
                "jock.svg",
                "herrmannplatz.npm-dependency-links",
                "doggy8088.quicktype-refresh",
                "KevinRose.vsc-python-indent",
                "bradlc.vscode-tailwindcss",
                "tilt-dev.tiltfile"
            ]
        }
    },
    "forwardPorts": [
        3000,
        5050,
        10350,
        30000
    ],
    // Pull the docker image to make sure we have the most up to date version
    "initializeCommand": "docker pull gladospipeline/glados-dev-container:main",
    "postStartCommand": "bash ./.devcontainer/post-start.sh",
    "postCreateCommand": "nohup bash -c 'while true; do sleep 20; ps aux | grep -E 'vscode.*[b]ootstrap-fork.*extensionHost.*' > /dev/null || kill -15 1; done &' > /dev/null",
    "runArgs": [
        "--rm"
    ]
}