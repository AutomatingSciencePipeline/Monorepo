{
    "name": "GLADOS Dev Container",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {},
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
        "ghcr.io/lentzi90/features/tilt:0": {},
        "ghcr.io/nucleuscloud/devcontainer-features/ctlptl:0": {}
    },
    "forwardPorts": [
        3000,
        5050,
        27017,
        10350
    ],
    "postCreateCommand": "cd ./apps/frontend && npm install && ctlptl create cluster minikube --registry=ctlptl-registry"
}
